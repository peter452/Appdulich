<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.Activity.ListPlaceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:id="@+id/relativeLayoutPlace"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:id="@+id/imgBackDetail"
            android:layout_centerVertical="true"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="kjsjfk"
            android:id="@+id/txtTitleListPlace"
            android:textStyle="bold"
            android:textSize="@dimen/TitleSize"
            android:fontFamily="@font/kkkkk"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgListPlace"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="fvfv"
                    android:fontFamily="@font/kkkkk"
                    android:textSize="@dimen/TitlePhu"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/txtNameListPlace"
                    android:padding="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#000"
                    android:id="@+id/txtbackgroundListPlace"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewListPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>