<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F8"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="124dp"
            android:text="Welcome to our app"
            android:textColor="#FFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="124dp" />



        <LinearLayout
            app:layout_constraintCircleRadius="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="590dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/backgroud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:layout_width="240dp"
                android:id="@+id/imgSlider3"
                android:src="@drawable/slide2"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="120dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da Nang city"
                android:textStyle="bold"
                android:textColor="#F4F4F6"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly, enthusiastic "
                android:textColor="#F7F6FA"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="70dp"
                android:textSize="16sp" />


            <Button
                android:textStyle="bold"
                android:layout_width="256dp"
                android:layout_height="45dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="GetStarTed"
                android:id="@+id/btnGetStarTed"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:background="@drawable/btn_primary"
                android:layout_marginBottom="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="#D5D5D5"
                android:textSize="16sp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>