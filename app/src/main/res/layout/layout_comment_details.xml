<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#000"
        app:riv_mutate_background="true"
        android:id="@+id/roundImageviewComment"
        app:riv_border_color="@color/blue"
        app:riv_border_width="2dp"
        app:riv_corner_radius="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TitlePhu"
            android:id="@+id/txtTitleComment"
            android:text="Sang Thai"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="0"
                android:isIndicator="true"
                android:numStars="5"
                android:transformPivotX="10dp"
                android:transformPivotY="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TitleSeemore"
                android:id="@+id/txtDateComment"
                android:gravity="center"
                android:text="27-07-07"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TitleSeemore"
            android:maxLines="3"
            android:id="@+id/txtContentComment"
            android:ellipsize="end"
            android:textColor="#000"
            android:text="27-07-07"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>