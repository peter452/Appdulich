<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardMaxElevation="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/cart2"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/cart1"
                app:cardElevation="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_citi_danang"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/cart1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="110dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#0B0C0C"
                    android:padding="5dp"
                    android:fontFamily="@font/kkkkk"
                    android:textSize="14dp"
                    android:text="Fast, convenient"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:fontFamily="@font/kkkkk"
                    android:text="Fast, convenient"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/cart2"
        app:cardBackgroundColor="@color/blue"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/liner0"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="20dp"
                    android:background="#fff"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/kkkkk"
                    android:padding="5dp"
                    android:text="UIT TEAM"
                    android:textColor="#fff"
                    android:textSize="@dimen/TitleSize" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/liner1"
                android:layout_below="@+id/liner0"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   app:cardCornerRadius="20dp">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
               </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/liner1"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/liner2"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:fontFamily="@font/kkkkk"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/TitlePhu"
                    android:textColor="#fff"/>
                <TextView
                    android:fontFamily="@font/kkkkk"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:fontFamily="@font/kkkkk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FaceBook"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/TitlePhu"
                    android:textColor="#fff"/>
                <TextView
                    android:fontFamily="@font/kkkkk"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:fontFamily="@font/kkkkk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zalo"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/TitlePhu"
                    android:textColor="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/liner2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/kkkkk"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="15dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kkkkk"
                        android:maxLines="1"
                        android:text="address: UIT, TP.HCM"
                        android:textColor="#fff"
                        android:textSize="@dimen/TitlePhu" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>