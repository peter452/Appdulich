<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:background="@drawable/boder"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/linerLayoutEvent"
        android:layout_margin="5dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:src="@drawable/img_citi_danang"
            android:id="@+id/imgItemEventHomepage"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TH06"
                android:fontFamily="@font/kkkkk"
                android:id="@+id/txtMounth"
                android:textSize="18dp"
                android:textColor="#F10909"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="07"
                android:fontFamily="@font/kkkkk"
                android:layout_below="@+id/txtMounth"
                android:layout_marginBottom="5dp"
                android:id="@+id/txtDay"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/TitlePhu"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/kkkkk"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:text="Đêm Ẩm Thực Hội An"
                android:layout_toRightOf="@+id/txtMounth"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>